#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>

int main(void)
{
 	srand((unsigned int)time(NULL));
	int value = rand() % 100;//0~99
	int num;
	printf("请输入你所猜的数字(区间为0~99）(并且只能为整数)：\n");
	for (;;)
	{
		scanf("%d", &num);
		if (value > num)
		{
			printf("你输入的数太小了\n");
			printf("请重新输入：\n");
		}
		else if (value < num)
		{
			printf("你输入的数太大了\n");
			printf("请重新输入：\n");
		}
		else
		{
			printf("恭喜你 猜对了\n");
			printf("Σ>―(〃°ω°〃)%c→\n",003);
			int lly[14] = { 73,32,108,111,118,101,32,89,79,85,32,76,74,81 };
			for (int i = 0; i < 14; i++)
			{
				printf("%c", lly[i]);
			}
			printf("\n");
			break;
		}
	}
	system("pause");
	return 0;
}
